<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="50dp"
    tools:context=".activity.CarpoolDetailsActivity">
    <TextView
        android:id="@+id/car_owner_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Joshua Chasnov's Car"
        android:paddingVertical="20dp"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/car_type">
    </TextView>
    <TextView
        android:id="@+id/car_type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Tesla Model S"
        android:paddingVertical="20dp"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car_owner_name"
        app:layout_constraintBottom_toTopOf="@id/car_remaining_seats">
    </TextView>
    <TextView
        android:id="@+id/car_remaining_seats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Seats filled: 9/10"
        android:paddingVertical="20dp"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car_type"
        app:layout_constraintBottom_toTopOf="@id/car_join_button">
    </TextView>
    <Button
        android:id="@+id/car_join_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car_remaining_seats"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onConfirmBooking">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>