<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">
    <EditText
        android:id="@+id/name_first_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="First name"
        android:layout_marginBottom="150dp"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:alpha="0.6"
        android:outlineAmbientShadowColor="#ffffff">
    </EditText>
    <EditText
        android:id="@+id/name_last_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_first_form"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Last name"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:alpha="0.6"
        android:outlineAmbientShadowColor="#ffffff">
    </EditText>
    <Spinner
        android:id="@+id/type_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_last_form"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:spinnerMode="dropdown"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:alpha="0.6">
    </Spinner>
    <EditText
        android:id="@+id/email_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type_form"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Email"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:alpha="0.6"
        android:outlineAmbientShadowColor="#ffffff">
    </EditText>
    <EditText
        android:id="@+id/password_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_form"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:alpha="0.6"
        android:outlineAmbientShadowColor="#ffffff">
    </EditText>
    <EditText
        android:id="@+id/password_confirm_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_form"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:alpha="0.6"
        android:outlineAmbientShadowColor="#ffffff">
    </EditText>
    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_form"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="REGISTER"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:backgroundTintMode="src_atop"
        android:onClick="onRegisterPressed">
    </Button>
    <Button
        android:id="@+id/go_to_login_page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/email_form"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="GO TO LOGIN"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:backgroundTintMode="src_atop"
        android:onClick="onGoToLoginPage">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>